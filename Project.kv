ScrollViewMain:


<ScrollViewMain@ScrollView>:
    MainPage:
        height: self.minimum_height

<MainPage@BoxLayout>:
    cols: 1
    rows: 3
    orientation: "vertical"
    Head:
    Device:
    Sensor:


<Head@BoxLayout>:
    padding: 10
    spacing: 10
    size_hint: (1,None)
    height: 60
    Label:
        color: 0.075, 0.467, 0.012,1
        text: "IOT FARM CONTROLLER !!!"
        font_size: 20
        canvas.before:
            Color:
                rgba: 0.565, 0.706, 0.02, 1
            Rectangle:
                pos: self.pos
                size: self.size

<Device@BoxLayout>:
    BoxLayout:
        spacing: 10
        orientation: "vertical"
        BoxLayout:
            cols: 4
            BoxLayout:
            BoxLayout:
                Label:
                    text: "Device 1"
                    font_size: "20dp"
                    color: 1,0,0,1
            BoxLayout:
                Switch:
                    id: my_switch
                    size_hint: None, 1
                    active: True
            BoxLayout:
        BoxLayout:
            cols: 4
            BoxLayout:
            BoxLayout:
                Label:
                    text: "Device 2"
                    font_size: "20dp"
                    color: 1,0,0,1
            BoxLayout:
                Switch:
                    id: my_switch
                    size_hint: None, 1
                    active: True
            BoxLayout:
        BoxLayout:
            cols: 4
            BoxLayout:
            BoxLayout:
                Label:
                    text: "Device 3"
                    font_size: "20dp"
                    color: 1,0,0,1
            BoxLayout:
                Switch:
                    id: my_switch
                    size_hint: None, 1
                    active: True
            BoxLayout:
        BoxLayout:
            cols: 4
            BoxLayout:
            BoxLayout:
                Label:
                    text: "Device 4"
                    font_size: "20dp"
                    color: 1,0,0,1
            GridLayout:
                cols : 2
                Switch:
                    id: my_switch
                    size_hint: None, 1
                    active: True
            BoxLayout:

<Sensor@GridLayout>:
    cols: 2
    Label:
        size_hint: (1,None)
        text: "Nhiệt Độ"
    Label:
        size_hint: (1,None)
        text: "Độ Ẩm"
    Label:
        id: lb_temp
        text: root.temp_text
        font_size: "30dp"
    Label:
        id: txt_humid
        text: root.humid_text
        font_size: "30dp"
    Label:
        size_hint: (1,None)
        text: "Anh Sang"
    Label:
        size_hint: (1,None)
        text: "Do Am Dat"
    Label:
        id: txt_light
        text: root.light_text
        font_size: "30dp"
    Label:
        id: txt_sol
        text: root.sol_text
        font_size: "30dp"
